<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/game_blue">

    <!-- Top Space (40%) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="02dp">

        <LinearLayout
            android:id="@+id/leftLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="30dp">

            <!-- TextView at the top of the left half -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLAYER 1"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:gravity="center" />

            <!-- TextView underneath the first one in the left half -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCORE"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:gravity="center" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/rightlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="30dp">

            <!-- TextView at the top of the left half -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLAYER 2"
                android:textSize="30sp"
                android:textColor="#FFFFFF"
                android:gravity="center" />

            <!-- TextView underneath the first one in the left half -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCORE"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:gravity="center" />
        </LinearLayout>

        <!-- Left Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/leftButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leftLayout"
            android:layout_alignParentStart="true"
            android:text="RESET"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"/>

        <!-- Right Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/rightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rightlayout"
            android:layout_alignParentEnd="true"
            android:text="NEW MATCH"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"/>

    </RelativeLayout>

    <!-- Tic Tac Toe Grid (50%) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:gravity="center">


        <!-- Right Half (60%) -->
        <RelativeLayout
            android:id="@+id/rightHalf"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Tic Tac Toe Grid -->
            <GridLayout
                android:id="@+id/rightHalfgrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <!-- First Row -->
                <!-- Buttons for the first row -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Button1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:background="@color/game_blue"
                    android:onClick="onCellClick"
                    android:text=""
                    android:textSize="24sp"
                    android:contentDescription="Clear Selection"/>

                <View
                    android:layout_width="4dp"
                    android:layout_height="80dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:background="@android:color/white" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Button2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:background="@color/game_blue"
                    android:onClick="onCellClick"
                    android:text=""
                    android:textSize="24sp"
                    android:contentDescription="Clear Selection"/>

                <View
                    android:layout_width="4dp"
                    android:layout_height="80dp"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:background="@android:color/white" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Button3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_row="0"
                    android:layout_column="4"
                    android:background="@color/game_blue"
                    android:onClick="onCellClick"
                    android:text=""
                    android:textSize="24sp"
                    android:contentDescription="Clear Selection"/>

                <View
                    android:layout_width="80dp"
                    android:layout_height="4dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:background="@android:color/white" />


                <View
                    android:layout_width="80dp"
                    android:layout_height="4dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:background="@android:color/white" />

                <View
                    android:layout_width="80dp"
                    android:layout_height="4dp"
                    android:layout_row="1"
                    android:layout_column="4"
                    android:background="@android:color/white" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Button4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:background="@color/game_blue"
                    android:onClick="onCellClick"
                    android:text=""
                    android:textSize="24sp"
                    android:contentDescription="Clear Selection"/>

                <View
                    android:layout_width="4dp"
                    android:layout_height="80dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:background="@android:color/white" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Button5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:background="@color/game_blue"
                    android:onClick="onCellClick"
                    android:text=""
                    android:textSize="24sp"
                    android:contentDescription="Clear Selection"/>

                <View
                    android:layout_width="4dp"
                    android:layout_height="80dp"
                    android:layout_row="2"
                    android:layout_column="3"
                    android:background="@android:color/white" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Button6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_row="2"
                    android:layout_column="4"
                    android:background="@color/game_blue"
                    android:onClick="onCellClick"
                    android:text=""
                    android:textSize="24sp"
                    android:contentDescription="Clear Selection"/>


                <View
                    android:layout_width="80dp"
                    android:layout_height="4dp"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:background="@android:color/white" />


                <View
                    android:layout_width="80dp"
                    android:layout_height="4dp"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:background="@android:color/white" />

                <View
                    android:layout_width="80dp"
                    android:layout_height="4dp"
                    android:layout_row="3"
                    android:layout_column="4"
                    android:background="@android:color/white" />



                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Button7"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:background="@color/game_blue"
                    android:onClick="onCellClick"
                    android:text=""
                    android:textSize="24sp"
                    android:contentDescription="Clear Selection"/>

                <View
                    android:layout_width="4dp"
                    android:layout_height="80dp"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:background="@android:color/white" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Button8"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_row="4"
                    android:layout_column="2"
                    android:background="@color/game_blue"
                    android:onClick="onCellClick"
                    android:text=""
                    android:textSize="24sp"
                    android:contentDescription="Clear Selection"/>

                <View
                    android:layout_width="4dp"
                    android:layout_height="80dp"
                    android:layout_row="4"
                    android:layout_column="3"
                    android:background="@android:color/white" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Button9"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_row="4"
                    android:layout_column="4"
                    android:background="@color/game_blue"
                    android:onClick="onCellClick"
                    android:text=""
                    android:textSize="24sp"
                    android:contentDescription="Clear Selection"/>

            </GridLayout>


        </RelativeLayout>



    </LinearLayout>

    <!-- Bottom Space (10%) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Winner!"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>
