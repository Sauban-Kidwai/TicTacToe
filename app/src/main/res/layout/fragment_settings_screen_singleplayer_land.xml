<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/game_blue">
    <!--    tools:context=".user_profile">-->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guideline5"
        app:layout_constraintEnd_toEndOf="@id/guideline6"
        app:layout_constraintTop_toTopOf="@id/guideline1"
        app:layout_constraintBottom_toBottomOf="@id/guideline2"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:text="Choose Board Size"
        android:textSize="30sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/board_3x3_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="3 x 3"
        android:background="@drawable/buttons"
        app:layout_constraintTop_toTopOf="@id/guideline1"
        app:layout_constraintBottom_toBottomOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="@id/guideline6"
        app:layout_constraintEnd_toEndOf="@id/guideline7" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/board_4x4_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="4 x 4"
        android:background="@drawable/buttons"
        app:layout_constraintTop_toTopOf="@id/guideline1"
        app:layout_constraintBottom_toBottomOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="@id/guideline7"
        app:layout_constraintEnd_toEndOf="@id/guideline8" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/board_5x5_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="5 x 5"
        android:background="@drawable/buttons"
        app:layout_constraintTop_toTopOf="@id/guideline1"
        app:layout_constraintBottom_toBottomOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="@id/guideline8"
        app:layout_constraintEnd_toEndOf="@id/guideline9" />


    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guideline5"
        app:layout_constraintEnd_toEndOf="@id/guideline6"
        app:layout_constraintTop_toTopOf="@id/guideline2"
        app:layout_constraintBottom_toBottomOf="@id/guideline3"
        android:textAlignment="center"
        android:layout_marginBottom="60dp"
        android:textColor="#FFFFFF"
        android:text="How many markers to win?"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guideline5"
        app:layout_constraintEnd_toEndOf="@id/guideline6"
        app:layout_constraintTop_toTopOf="@id/guideline2"
        android:layout_marginTop="80dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:text="This specifies the number of consecutive markers required to win"
        android:textSize="12sp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/threemarker"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="3 markers"
        android:background="@drawable/buttons"
        app:layout_constraintTop_toTopOf="@id/guideline2"
        app:layout_constraintBottom_toBottomOf="@id/guideline3"
        app:layout_constraintStart_toStartOf="@id/guideline6"
        app:layout_constraintEnd_toEndOf="@id/guideline7" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fourmarker"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="4 markers"
        android:background="@drawable/buttons"
        app:layout_constraintTop_toTopOf="@id/guideline2"
        app:layout_constraintBottom_toBottomOf="@id/guideline3"
        app:layout_constraintStart_toStartOf="@id/guideline7"
        app:layout_constraintEnd_toEndOf="@id/guideline8" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fivemarker"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="5 markers"
        android:background="@drawable/buttons"
        app:layout_constraintTop_toTopOf="@id/guideline2"
        app:layout_constraintBottom_toBottomOf="@id/guideline3"
        app:layout_constraintStart_toStartOf="@id/guideline8"
        app:layout_constraintEnd_toEndOf="@id/guideline9" />


    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guideline5"
        app:layout_constraintEnd_toEndOf="@id/guideline6"
        app:layout_constraintTop_toTopOf="@id/guideline3"
        android:layout_marginTop="35dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:text="Choose Your Marker"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guideline6"
        app:layout_constraintEnd_toEndOf="@id/guideline7"
        app:layout_constraintTop_toTopOf="@id/guideline3"
        app:layout_constraintBottom_toBottomOf="@id/guideline4"
        android:textColor="#FFFFFF"
        android:text="Player 1"
        android:textSize="20sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/PlayeroneX"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="X"
        android:background="@drawable/buttons"
        app:layout_constraintStart_toStartOf="@id/guideline7"
        app:layout_constraintEnd_toEndOf="@id/guideline8"
        app:layout_constraintTop_toBottomOf="@id/guideline3"
        app:layout_constraintBottom_toBottomOf="@id/guideline4"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/PlayeroneO"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="O"
        android:background="@drawable/buttons"
        app:layout_constraintStart_toStartOf="@id/guideline8"
        app:layout_constraintEnd_toEndOf="@id/guideline9"
        app:layout_constraintTop_toTopOf="@id/guideline3"
        app:layout_constraintBottom_toBottomOf="@id/guideline4"/>



</androidx.constraintlayout.widget.ConstraintLayout>
